{% for trick in tricks %}
    <div id="{{ trick.slug }}"
         data-trick-url="{{ trick.slug }}"
         class="shadow-2xl rounded-2xl bg-white dark:bg-gray-800">

        <div class="relative">
            <div class="flex p-1 absolute right-2 top-2 bg-white rounded">
                {% include '_delete_edit_trick_icons.html.twig' %}
            </div>
            <img class="object-center object-cover rounded-t-2xl w-full max-h-96 md:h-44 lg:h-52"
                 src="{{ asset('assets/uploads/tricks-main-picture/') }}{{ trick.mainPicture }}"
                 alt="{{ trick.title }} Main Picture">
        </div>
        <div class="p-5">
            <h3 class="mb-3 text-gray-900 dark:text-gray-100 text-center pb-3 text-xl">
                {{ trick.title }}
            </h3>
            <div class="text-center mb-3">
                <span class="mx-auto bg-gray-100 dark:bg-gray-900 dark:text-gray-100 rounded-md px-2 py-1 text-sm">{{ trick.category.name }}</span>
            </div>
            <div class="p-3 text-center">
                <a href="{{ path('show_trick', {'slug' : trick.slug}) }}">
                    <button class="rounded-md mx-auto bg-gray-900 dark:bg-gray-100 dark:text-black text-white px-6 py-3">
                        Voir le trick
                    </button>
                </a>
            </div>
        </div>

    </div>
{% endfor %}