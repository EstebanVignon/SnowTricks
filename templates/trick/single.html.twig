{% extends 'base.html.twig' %}

{% block body %}

    {% include 'shared/_flash.html.twig' %}

    <h1 class="text-2xl mt-12 mx-auto text-center text-grey-800 dark:text-white">{{ trick.title }}</h1>

    <div class="py-12 my-12 bg-white dark:bg-gray-700">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

            <nav class="bg-gray-200 dark:bg-gray-900 dark:text-white max-w-3xl p-3 rounded w-full m-4">
                <ol class="list-reset flex text-grey-dark">
                    <li>
                        <a href="{{ path('homepage') }}" class="text-blue font-bold">Accueil</a>
                    </li>
                    <li><span class="mx-2">/</span></li>
                    <li>
                        <a href="{{ path('trick_category', {'slug': trick.category.slug}) }}"
                           class="text-blue font-bold">{{ trick.category.name }}</a>
                    </li>
                    <li><span class="mx-2">/</span></li>
                    <li>{{ trick.title }}</li>

                </ol>
            </nav>
            {{ dump(trick) }}

            <div>
                {% for video in trick.videos %}
                    {{ video.link }}<br>
                {% endfor %}
            </div>

            <img src="{{ asset('assets/uploads/tricks-main-picture/') }}{{ trick.mainPicture }}"
                 alt="{{ trick.title }} Main Picture">

            <div class="flex flex-wrap mt-12 justify-center">
                {% for picture in trick.pictures %}
                    <img class="w-80 mx-5"
                         src="{{ asset('assets/uploads/tricks-pictures/') }}{{ picture.fileName }}"
                         alt="{{ trick.title }} Collection Picture">
                {% endfor %}
            </div>

        </div>
    </div>

{% endblock %}