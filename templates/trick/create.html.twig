{% extends 'base.html.twig' %}

{% form_theme formView 'theme/tailwind_layout.html.twig' %}

{% block body %}

    <h1 class="text-2xl mt-12 mx-auto text-center text-grey-800 dark:text-white">Cr√©er un trick</h1>

    <div class="py-12 my-12 bg-white dark:bg-gray-700">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            {{ form_start(formView) }}
            {{ form_errors(formView) }}

            <div class="flex">
                <div class="w-1/2">
                    {{ form_row(formView.title) }}
                    {{ form_row(formView.description) }}
                </div>
                <div class="w-1/2">
                    {{ form_row(formView.mainPicture) }}
                    {{ form_row(formView.category) }}
                </div>
            </div>

            <button type="submit">Sauvegarder</button>
            {{ form_end(formView) }}
        </div>
    </div>

{% endblock %}