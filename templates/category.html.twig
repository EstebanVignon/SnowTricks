{% extends 'base.html.twig' %}

{% block body %}

    <h1 class="text-2xl mt-12 mx-auto text-center text-grey-800 dark:text-white">{{ category.name }}</h1>

    <div class="py-12 my-12 bg-white dark:bg-gray-700">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">

            <nav class="bg-gray-200 dark:bg-gray-900 dark:text-white max-w-3xl p-3 rounded w-full m-4">
                <ol class="list-reset flex text-grey-dark">
                    <li>
                        <a href="{{ path('homepage') }}" class="text-blue font-bold">Accueil</a>
                    </li>
                    <li><span class="mx-2">/</span></li>
                    <li>{{ category.name }}</li>
                </ol>
            </nav>

            <div class="space-y-10 md:space-y-0 md:grid md:grid-cols-3 md:gap-x-8 md:gap-y-10 lg:grid-cols-4">
                {% for trick in category.tricks %}
                    <div class="shadow-md rounded-2xl bg-white dark:bg-gray-800">
                        <img class="object-center object-cover rounded-t-2xl w-full max-h-96 md:h-44 lg:h-52"
                             src="{{ trick.mainPicture }}"
                             alt="Tricks Picture">
                        <div class="p-5">
                            <h3 class="mb-3 text-gray-900 dark:text-gray-100 text-center pb-3 text-xl">
                                {{ trick.title }}
                            </h3>
                            <div class="p-3 text-center">
                                <a href="{{ path('show_trick', {'slug' : trick.slug}) }}">
                                    <button class="rounded-md mx-auto bg-green-900 dark:bg-green-300 dark:text-black text-white px-6 py-3">Voir le trick</button>
                                </a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

{% endblock %}