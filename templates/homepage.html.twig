{% extends 'base.html.twig' %}

{% block title %}Snowtricks | Site communautaire de tricks de Snowboard{% endblock %}

{% block body %}
    <h1 class="text-2xl mt-12 mx-auto text-center text-grey-800 dark:text-white">Bienvenue</h1>

    <div class="py-12 my-12 bg-white dark:bg-gray-900">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="space-y-10 md:space-y-0 md:grid md:grid-cols-3 md:gap-x-8 md:gap-y-10 lg:grid-cols-4">
                {% for i in 1..8 %}
                    <div class="shadow-md rounded-2xl">
                        <img class="object-center object-cover rounded-t-2xl w-full max-h-96 md:h-44 lg:h-52"
                             src="https://picsum.photos/300/300"
                             alt="Tricks Picture">
                        <div class="bg-white dark:bg-gray-800 rounded-b-2xl">
                            <h3 class="text-gray-900 dark:text-gray-100 text-center py-3 text-xl">
                                Trick name {{ i }}
                            </h3>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>

    <div class="text-center">
        <button id="toggleBtn" class="mx-auto bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            Toggle Dark Mode
        </button>
    </div>

{% endblock %}
